
## <summary>policy for flow</summary>


########################################
## <summary>
##	Transition to flow.
## </summary>
## <param name="domain">
## <summary>
##	Domain allowed to transition.
## </summary>
## </param>
#
interface(`flow_domtrans',`
	gen_require(`
		type flow_t, flow_exec_t;
	')

	corecmd_search_bin($1)
	domtrans_pattern($1, flow_exec_t, flow_t)
')


########################################
## <summary>
##	Execute flow server in the flow domain.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`flow_initrc_domtrans',`
	gen_require(`
		type flow_initrc_exec_t;
	')

	init_labeled_script_domtrans($1, flow_initrc_exec_t)
')


########################################
## <summary>
##	Search flow lib directories.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`flow_search_lib',`
	gen_require(`
		type flow_var_lib_t;
	')

	allow $1 flow_var_lib_t:dir search_dir_perms;
	files_search_var_lib($1)
')

